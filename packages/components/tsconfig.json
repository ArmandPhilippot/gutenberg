{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"declarationDir": "build-types",
		"types": [ "gutenberg-env" ]
	},
	"references": [
		{ "path": "../deprecated" },
		{ "path": "../element" },
		{ "path": "../hooks" },
		{ "path": "../primitives" }
	],
	"include": [
		"src/animate/**/*",
		"src/base-control/**/*",
		"src/dashicon/**/*",
		"src/text/**/*",
		"src/tip/**/*",
		"src/ui/context/**/*",
		"src/ui/grid/**/*",
		"src/ui/text/**/*",
		"src/ui/truncate/**/*",
		"src/ui/utils/**/*",
		"src/ui/view/**/*",
		"src/utils/**/*",
		"src/visually-hidden/**/*",
	],
	"exclude": [
		"src/**/*.android.js",
		"src/**/*.ios.js",
		"src/**/*.native.js",
		"src/**/react-native-*",
		"src/**/stories",
		"src/**/test",
	]
}
